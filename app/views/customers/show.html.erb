<section class="customers">
  <div class="container">
    <div class="customer-show">
      <h1>Detalle de cliente</h1>
      <p id="notice"><%= notice %></p>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Correo electrónico</th>
              <th>Teléfono</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @customer.name %></td>
              <td><%= @customer.email %></td>
              <td><%= @customer.phone %></td>
              <td><%= link_to 'Editar', edit_customer_path(@customer), class:"btn btn-primary" %></td>
              <td><%= link_to 'Regresar', customers_path, class:"btn btn-primary" %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <h1>Registro de mascota </h1>
      <%= render "pets/form" %>
      <div class="table-responsive">
        <table class="table table-striped ">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Raza</th>
              <th>Edad</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @customer.pets.each do |pet| %>
              <tr>
                <td><%= pet.name %></td>
                <td><%= pet.breed %></td>
                <td><%= pet.age %></td>
                <td><%= link_to 'Ver visitas', visit_path %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
